@page "/movie"
@using global::Movies.Shared.Dtos
@rendermode InteractiveServer
@attribute [StreamRendering(true)]

@inject MovieApiClient MovieApi

<PageTitle>Movie</PageTitle>

<h1>Movies</h1>

<p>This component demonstrates showing data loaded from a backend API service.</p>

@if (movies == null)
{
    <p><em>Loading...</em></p>
}
else
{
    //TODO add mudblazor and create interactive UI with search features and pagination
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in movies)
            {
                <tr>
                    <td>@movie.Title</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private MovieDto[]? movies;

    protected override async Task OnInitializedAsync()
    {
        //TODO getting movies from UI search, using page number and page size
        movies = await MovieApi.GetMoviesAsync();
    }
}
